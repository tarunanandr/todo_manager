<section class="TodoSection">
  <div class="TodoTitle">
    <h2 class="TodoTitle-text"><%=section_title%></h2>
    <p class="TodoTitle-count"><%= todos.completed.count %>/<%= todos.count %></p>
  </div>

  <ul>
  <% todos.all.each do |todo| %>
    <li class="TodoItem">
      <% if todo.completed %>
        <input class="TodoItem-checkbox" type="checkbox" checked/>
        <p class="TodoItem-text" style = "text-decoration: line-through"><%= todo.todo_text %></p>
      <% else %>
        <input class="TodoItem-checkbox" type="checkbox" />
        <p class="TodoItem-text" ><%= todo.todo_text %></p>
      <% end %>
      <% if !todo.due_today? %>
        <p class="TodoItem-duedate"><%= todo.due_date.to_s(:short) %></p>
      <% end %>
      <a class="TodoItem-deletebox" href="javascript:void(0)">
        <img class="TodoItem-deletebox" src="delete.svg" />
      </a>
    </li>
  <% end %>
  </ul>
</section>
